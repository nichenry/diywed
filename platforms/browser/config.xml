<?xml version='1.0' encoding='utf-8'?>
<widget id="com.diy.web" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>DIY Wedding</name>
    <description>
        Do It Yourself
    </description>
    <author email="info@diywedding.co.kr" href="http://diywedding.co.kr">
        DIY Wedding Team
    </author>
    <content src="index.html" />
    <splash src="www/res/screen/android/splash.png" />
    <access origin="http://diywedding.co.kr" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="1000" />
</widget>
